#!/usr/bin/env bash

ENV_DIR=${3:-}
build_dir=${1:-}
npmrc="$(cat $ENV_DIR/NPMRC)"

if [ ! -d "$build_dir/frontend" ]; then
    mkdir "$build_dir/frontend"
fi

if [ "$npmrc" != "" ]; then
	echo "-----> Using .npmrc from config var NPMRC"
	echo "$npmrc" > "$build_dir/frontend/.npmrc"
fi

echo "Contents of $build_dir/frontend directory:"
ls -a "$build_dir/frontend"